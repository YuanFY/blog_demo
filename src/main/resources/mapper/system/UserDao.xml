<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuanfy.monitorsite.system.dao.UserMapper">
	
	<resultMap type="com.yuanfy.monitorsite.system.entity.UserEntity" id="userMap">
		<id column="id" property="id"/>
		<result column="register_time" property="registerTime"/>
	</resultMap>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into tb_sys_user(
			name, 
			password,
			register_time
		) values (
			#{name}, 
			#{password},
			#{registerTime}
		)	
	</insert>
	
	<update id="update">
		update tb_sys_user set password = #{password} where id = #{id}
	</update>
	
	<delete id="deleteById">
		delete from tb_sys_user where id = #{id}
	</delete> 
	
	<select id="getById">
		select * from tb_sys_user
	</select>
</mapper>